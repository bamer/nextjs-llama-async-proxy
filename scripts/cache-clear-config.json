{
  "name": "clear-build-caches",
  "description": "Clear all build caches and verify type checking",
  "steps": [
    {
      "name": "Clear .next directory",
      "command": "rm -rf .next",
      "description": "Remove Next.js build cache"
    },
    {
      "name": "Clear Vite cache",
      "command": "rm -rf node_modules/.vite",
      "description": "Remove Vite cache"
    },
    {
      "name": "Clear general cache",
      "command": "rm -rf node_modules/.cache",
      "description": "Remove general node_modules cache"
    },
    {
      "name": "Clear TypeScript build info",
      "command": "find . -name '*.tsbuildinfo' -type f -delete 2>/dev/null || true",
      "description": "Remove TypeScript build info files"
    },
    {
      "name": "Run type check",
      "command": "pnpm type:check",
      "description": "Verify TypeScript compilation"
    }
  ]
}
